extract_tarball () {
# Extract chroot tarball into chrootdir.
####################################################################################################################################################

if [[ -f ${tarball}.tar.xz ]]; then
    if [[ -d ${tempdir} ]]; then
        msg "$(gettext "Extracting %s to chroot directory. This may take a few minutes. Please wait...")"
        ( run_command "sudo tar Jxf ${tarball}.tar.xz -C ${tempdir}" && mount_necessary_dirs ) || ( error "$(gettext "Zeynep can not extract %s tarball to %s.")" "${tarball}.tar.xz" "${tempdir}" && exit_function )
    else
        error "$(gettext "A temporary directory to extract %s is mandatory, but none found.")" "${tempdir}"
        exit_function
    fi
else
    ( error2 "$(gettext "No previously created %s tarball found. You can create one via this script using '-g' switch for future uses to save time/bandwith.")" "${tarball}.tar.xz" && without_tarball )
fi


}

####################################################################################################################################################
check_dist () {
####################################################################################################################################################
# Little helper function for checking %dist or %distsuffix in .rpmmacros file.
#
# This function is needed if user created tarball with .rpmmacros file. Since Mageia 6, setting
# %distsuffix in .rpmmacros won't work anymore. We should define %dist for mga >= 6

if [[ -f ${chrootdir}/home/${USER}/.rpmmacros ]]; then
    chroot_rpmmacros="/home/${USER}/.rpmmacros"
    msg "$(gettext "Checking %s macros '%s' or '%s' usage and modifying it for your Mageia %s build.")" "${chrootdir}${chroot_rpmmacros}" "%dist" "%distsuffix" "${mga_version}"
    if [[ "${mga_version}" == "cauldron" ]] || [[ ${mga_version} -gt 5 ]]; then
        local dist_suffix="$(grep %distsuffix ${chrootdir}$chroot_rpmmacros | grep -oE '[^ ]+$')" > /dev/null
        if (grep %distsuffix ${chrootdir}$chroot_rpmmacros | grep -oE '^#'); then
            (run_in_chroot "sed -i '/%distsuffix/c\#%dist $dist_suffix%{distro_release}' $chroot_rpmmacros")
        else
            (run_in_chroot "sed -i '/%distsuffix/c\%dist $dist_suffix%{distro_release}' $chroot_rpmmacros")
        fi
    else
        local dist_macro="$(grep '%dist\ ' ${chrootdir}$chroot_rpmmacros | grep -oE '[^ ]+$' | cut -d "%" -f1)" > /dev/null
        if (grep %dist ${chrootdir}$chroot_rpmmacros | grep -oE '^#'); then
            (run_in_chroot "sed -i '/'%dist\ '/c\#%distsuffix $dist_macro' $chroot_rpmmacros")
        else
            (run_in_chroot "sed -i '/'%dist\ '/c\%distsuffix $dist_macro' $chroot_rpmmacros")
        fi
    fi
fi

}

####################################################################################################################################################
mount_necessary_dirs () {
# Mount necessary mountpoint in chroot:
####################################################################################################################################################

# Message to user:
msg "$(gettext "Zeynep tries to mount necessary mount points %s to %s chroot directory.")" "(/dev,/dev/pts,/sys,/proc)" "${chrootdir}"

# Use special mount for proc
sudo mount -t proc proc ${chrootdir}/proc || ( error "$(gettext "Zeynep can not mount %s .This is critical. Zeynep can not continue...")" "${mount_points}" && exit_function )

# Mount and error in for loop:
for mount_points in $(echo "dev dev/pts dev/shm sys"); do
    run_command "sudo mount --bind /${mount_points} ${chrootdir}/${mount_points}" || ( error "$(gettext "Zeynep can not mount %s to %s. This is critical.Zeynep can not continue...")" "/${mount_points}" "${chrootdir}/${mount_points}" && exit_function )
done

# It is not harmful to add resolv.conf copying to here (needed for internet connection)
if [[ -f @sysconfdir@/resolv.conf ]]; then
    run_command "sudo cp -f @sysconfdir@/resolv.conf ${chrootdir}@sysconfdir@/resolv.conf" || ( error "$(gettext "Zeynep can not copy %s in chroot environment.")" "@sysconfdir@/resolv.conf" &&  exit_function )
else
    error "$(gettext "Zeynep can not locate %s in chroot environment.")" "@sysconfdir@/resolv.conf"
    exit_function
fi

# Now we can create our user account and $HOME directory.
create_chroot_user

}

####################################################################################################################################################
copy_srpm () {
# Copy srpm into the chroot dir.
####################################################################################################################################################

run_command "cp -f ${srpm} ${chrootdir}/home/${USER}/" || ( error "$(gettext "Zeynep can not copy %s source rpm to %s. Can not continue.")" "${srpm}" "${chrootdir}/home/${USER}/" && exit_function )

}

####################################################################################################################################################
update_rpms () {
# Rebuild rpm database and try to update the system in chroot
####################################################################################################################################################

# Check if user wants to use rpm cache:
if cache_option; then urpmi_options+=("--noclean"); fi

# Update rpms in chroot (There would be updated packages after chroot tarball creation)
msg "$(gettext "There may be updated packages after chroot tarball creation. Zeynep will try to update chroot system. Please wait a few seconds...")"
urpmi_options+=("--auto --debug --excludedocs --no-verify-rpm --nolock --ignoresize")
urpmi_options_array="${urpmi_options[@]}"
if run_command "sudo urpmi --urpmi-root ${chrootdir} ${urpmi_options_array} --auto-update"; then
    msg "$(gettext "... DONE!")"
else
    read -r -p "$(plain "$(gettext "Zeynep failed to update rpms in chroot. Would you like to continue [Y/n] ")")" continue_action
    case $continue_action in
    [yY][eE][sS]|[yY] ) 
                        msg "$(gettext "Zeynep will continue without updated system in chroot")"
                        ;;
    *)
                        msg "$(gettext "User choose to not contiune without an updated chroot system. Exiting...")"
                        exit_function
                        ;;
    esac
fi

# Rebuild rpm database in chroot environment
msg "$(gettext "Rebuilding RPM database. Please wait a few seconds...")"
