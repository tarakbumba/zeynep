        generate_chroot
    else
        ( error "$(gettext "You must supply a srpm file to build rpm packages using zeynep but none given.
Or do you forget to use '-s' switch? Exiting...")" && exit 1 )
    fi
fi

}

logging () {
####################################################################################################################################################
# Log file creation.
# I have tried infamous (exec > tee) stuff. Unfortunately i couldn't manage traps to work. This is the only working way that i' ve found:
####################################################################################################################################################
# Check that if we are dealing with chroot creation or package building:
if [[ $generate_tarball != "1" ]] && [[ -d ${srpm_path} ]]; then
    logdir="${srpm_path}"
    local log_name="zeynep-${arch}"
else
    logdir="${TMPDIR}"
    local log_name="zeynep-${arch}-tarball"
fi

# Create log file in srpm path and start logging from here:
#log_file="$(mktemp -p ${logdir} --suffix=".log" zeynep_$(date +%Y%m%d_%H%m).XXXXXXXXXX)"
log_file="$(mktemp -p ${logdir} --suffix=".log" ${log_name}.XXX)"
msg "$(gettext "You can investigate zeynep log as %s ")" ${log_file}
mkfifo ${log_file}.pipe
tee "${log_file}" < "${log_file}.pipe" &
exec &> ${log_file}.pipe

}

####################################################################################################################################################
check_system_arch () {
# We should check if system is 64 bit capable.
# We should not try to build a 64 bit package/chroot on a 32 bit
# system, should we ? :-)
####################################################################################################################################################

if [[ -n ${MGAARCH} ]]; then
    if [[ $(arch) != "x86_64" ]] && [[ "${MGAARCH}" == "x86_64" || ${MGAARCH} == "both" ]]; then
        error2 "$(gettext "You have set build arch as 64bit on a 32 bit machine which is impossible! Zeynep will create packages/chroot for 32bit architecture...")"
        export arch="i586" && logging && package_or_chroot
    elif [ $(arch) == "x86_64" ] && [ ${MGAARCH} == "x86_64" ] || [ ${MGAARCH} == "i586" ]; then
        export arch="${MGAARCH}" && logging && package_or_chroot
    elif [ $(arch) != "x86_64" ] && [ ${MGAARCH} == "i586" ]; then
        export arch="i586" && logging && package_or_chroot 
    elif [ ${MGAARCH} == "both" ]; then
		# "Both" argument needs special treatment. We must unset arch from previous run and must export new arch to the functions.
        unset arch && export arch="i586" && logging && package_or_chroot
        msg "$(gettext "
Zeynep will try to create package/tarball for x86_64 system now.
")"
#		unset {arch,log_file,build_log,rpmqa_log,deps_log}
        unset arch
		# Also setting x86_64 here needs special treatment. Setting new arch is not enough. Whatever i did it seems that "arch" portion of
		# a path always lingering. This is especially true for cache and upload paths. So, it seems to me replacing arches in those vars are
		# the only option which works. Also, we should unset some vars in unclean_temp function.
		export arch="x86_64"
		export cache_path="${cache_path/i586/x86_64}"
		export upload_path="${upload_path/i586/x86_64}"
		logging && package_or_chroot
    fi
else
    warning "$(gettext "You have specified an invalid argument for system architecture. Zeynep will build packages/tarballs for your system's main architecture")"
    if [ $(arch) != "x86_64" ]; then export arch="i586" && logging && package_or_chroot; else export arch="x86_64" && logging && package_or_chroot; fi
fi

}

